{
  "compilerOptions": {
    "types": ["node"],
    "target": "ES6",
    "module": "ES6",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "declaration": false,
    "sourceMap": false,
    "outDir": "dist"
  },
  "include": [
    "src/*.ts",
    "src/**/*.ts"
  ],
  "exclude": ["**/node_modules", "dist", "test"]
}