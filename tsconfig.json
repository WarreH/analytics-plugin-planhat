{
  "compilerOptions": {
    "target": "es2022",
    "module": "ES2022",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "removeComments": true,
    "declaration": true,
    "sourceMap": true,
    "lib": ["es6", "DOM"],
  },
  "include": [
    "src/*.ts"
  ],
  "exclude": ["**/node_modules", "dist", "test"]
}