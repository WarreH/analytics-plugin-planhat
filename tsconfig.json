{
  "compilerOptions": {
    "target": "ES6",
    "module": "ES6",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "removeComments": true,
    "declaration": true,
    "sourceMap": true,
  },
  "include": [
    "src/*.ts",
    "src/**/*.ts"
, "src/node/https.ts"  ],
  "exclude": ["**/node_modules", "dist", "test"]
}